<Window x:Class="DiplomaProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DiplomaProject.Controls.ResizableContainer"
        
        Title="MainWindow" Height="700" Width="1000">
    <DockPanel>
        <Ribbon DockPanel.Dock="Top" x:Name="Ribbon" Title="Ribbon Title">
            <Ribbon.HelpPaneContent>
                <RibbonButton Content="Images/SmallIcon.png" />
            </Ribbon.HelpPaneContent>
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar >
                    <RibbonButton x:Name="QATButton1"/>
                    <RibbonButton x:Name="QATButton2"/>
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu >
                    <RibbonApplicationMenuItem Header="Hello _Ribbon"
                                                      x:Name="MenuItem1"
                                                     />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab x:Name="HomeTab" 
                              Header="Home">
                <RibbonGroup x:Name="Group1" 
                                    Header="Group1">
                    <RibbonButton x:Name="Button1"
                                         Label="Button1" />
                    <RibbonButton x:Name="Button2"
                                         Label="Button2" />
                    <RibbonButton x:Name="Button3"
                                         Label="Button3" />
                    <RibbonButton x:Name="Button4"
                                         Label="Button4" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Grid>
            <RichTextBox VerticalScrollBarVisibility="Visible">
                <FlowDocument FontSize="20">
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                    <BlockUIContainer>
                            <Image HorizontalAlignment="Left" MaxWidth="600" Source="C:\Users\Антон\Pictures\Screenshots\Снимок экрана (2).png"/>
                    </BlockUIContainer>
                </FlowDocument>
            </RichTextBox>
        </Grid>
    </DockPanel>
</Window>